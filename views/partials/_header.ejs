<nav>
  <h1>TinyApp</h1>
  <ul>
    <li class="navbar"><a href="/" class="navbar">Home</a></li>
    <li class="navbar"><a href="/urls/new" class="navbar">Create Shortlink</a></li>
    <li class="navbar"><a href="/urls" class="navbar">View Database (List)</a></li>
    <li class="navbar"><a href="/urls.json" class="navbar">View Database (JSON)</a></li>
  </ul>

    <br/>
    <br/>

    <!-- Is logged in -->
    <% if (user) { %>
      <p>Welcome, <%= user["email"] %>!</p>
      <form action="/logout" method="POST">
        <input type="submit" value="Sign Out">
      </form>

    <!-- Is not logged in -->
    <% } else { %>
      <p>Welcome, Guest!</p>
      <form action="/login" method="POST">
        <label for="username">Login </label>
        <input id="username" name="username" type="text">
        <input type="submit" value="Sign In">
      </form>
      <p>or <a href="/register">Create a new account</a></p>
    <% }; %>

  </ul>
</nav>
